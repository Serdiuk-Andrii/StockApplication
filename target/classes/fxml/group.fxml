<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" stylesheets="@../css/group.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Client.Controller.GroupController">
   <center>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER" prefHeight="55.0" prefWidth="442.0" VBox.vgrow="ALWAYS">
               <children>
                  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" HBox.hgrow="NEVER">
                     <children>
                        <Button fx:id="infoButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onMouseReleased="#getInfoAboutGroup" text="General info" textAlignment="CENTER" HBox.hgrow="NEVER" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" HBox.hgrow="NEVER">
                     <children>
                        <TextField id="searchFiled" fx:id="searchFiled" alignment="CENTER" promptText="Search">
                           <HBox.margin>
                              <Insets />
                           </HBox.margin>
                        </TextField>
                     </children>
                     <HBox.margin>
                        <Insets bottom="10.0" top="10.0" />
                     </HBox.margin>
                  </HBox>
                  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0" HBox.hgrow="NEVER">
                     <children>
                        <Button fx:id="createProductButton" alignment="TOP_LEFT" mnemonicParsing="false" onMouseReleased="#onCreateProductClicked" text="Create product" textAlignment="CENTER" HBox.hgrow="NEVER" />
                        <Button fx:id="editProductButton" mnemonicParsing="false" onMouseReleased="#onEditProductButtonClicked" text="Edit" HBox.hgrow="NEVER" />
                     </children>
                  </HBox>
               </children>
            </HBox>
            <TableView fx:id="productsTableView" prefHeight="334.0" prefWidth="456.0">
              <columns>
                <TableColumn fx:id="productNameColumn" prefWidth="97.0" text="Product name" />
                <TableColumn fx:id="descriptionColumn" prefWidth="105.0" text="Description" />
                  <TableColumn fx:id="producerColumn" prefWidth="93.0" text="Producer" />
                  <TableColumn fx:id="priceColumn" prefWidth="73.0" text="Price" />
                  <TableColumn fx:id="amountColumn" prefWidth="87.0" text="Amount" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Button fx:id="removeProductButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onMouseReleased="#onRemoveButtonClicked" text="Remove" />
               </children>
            </HBox>
         </children>
      </VBox>
   </center>
</BorderPane>
